children:
  - type: component.form
    instanceId: edit-customer
    options:
      children:
        - type: component.avatar-field
          instanceId: avatar
          options:
            label: Avatar
        - type: component.text-field
          instanceId: SalesRepresentative
          options:
            label: Sales representative
            initialValue: =@ctx.datasources.customer.SalesRepresentative
        - type: component.dropdown
          instanceId: countryCode
          options:
            label: Country code
            data: =@ctx.datasources.countryCode
            item:
              type: component.dropdown-item
              options:
                title: =@ctx.current.item.value
                value: =@ctx.current.item.value
        - type: component.dropdown
          instanceId: entityTypeCode
          options:
            label: entity Type Code
            data: =@ctx.datasources.entityTypeCode
            item:
              type: component.dropdown-item
              options:
                title: =@ctx.current.item.value
                value: =@ctx.current.item.value
        - type: component.number-field
          instanceId: ParentCUstomerId
          options:
            label: Parent customer ID
        - type: component.text-field
          instanceId: statusCode
          options:
            label: Status code
            initialValue: Potentional
        - type: component.field-row
          options:
            children:
              - type: component.text-field
                instanceId: id
                options:
                  label: Id
              - type: component.text-field
                instanceId: tax
                options:
                  label: Tax id
        - type: component.text-field
          instanceId: name
          options:
            label: Name
        - type: component.field-row
          options:
            children:
              - type: component.text-field
                instanceId: street
                options:
                  label: Street
              - type: component.text-field
                instanceId: streetNumber
                options:
                  label: Street number
        - type: component.field-row
          options:
            children:
              - type: component.text-field
                instanceId: city
                options:
                  label: City
              - type: component.text-field
                instanceId: zip
                options:
                  label: Zip code
        

      